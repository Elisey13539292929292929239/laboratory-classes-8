<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title><%= headTitle %></title>
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body>
    <main>
      <%- include("partials/navigation", {
        menuLinks: menuLinks,
        activeLinkPath: activeLinkPath,
        cartCount: cartCount,
      }) %>

      <h1 class="heading">Your Cart</h1>

      <% if (items.length === 0) { %>
        <p>No products in cart.</p>
      <% } else { %>
        <% items.forEach(item => { %>
          <div class="card">
            <h3 class="card__title"><%= item.product.name %></h3>
            <p class="card__description"><%= item.product.description %></p>
            <p class="card__price">
              <%= item.product.price %> PLN Ã— <%= item.quantity %> = 
              <strong><%= item.product.price * item.quantity %> PLN</strong>
            </p>
          </div>
        <% }); %>

        <h2>Total: <%= totalPrice %> PLN</h2>
      <% } %>
    </main>
  </body>
</html>
